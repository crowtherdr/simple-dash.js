<%

  // figure out the time
  var last_updated_raw = moment(updated).tz("America/Denver");
  var last_updated = last_updated_raw.format('h:mm a');


  var SLOW_RESPONSE = 5000
    , FAST_RESPONSE = 300
    , DOWN_THRESHOLD = 50
    , WARN_MEMORY = 400
    , DATA_KEY = 'status:dashboard:frontier:mem_response'
    , ERROR_KEY = 'status:dashboard:frontier:heroku_errors';


  var API_SLOW_RESPONSE = 1000
    , API_DOWN_THRESHOLD = 50
    , STATUS_TO_DISPLAY = {
      'good' : 'success',
      'slow' : 'warning',
      'down' : 'danger'
    };

if (page_type == "api") {
  SLOW_RESPONSE = API_SLOW_RESPONSE;
  DOWN_THRESHOLD = API_DOWN_THRESHOLD;
};

  var error_rate = 0;
  if (current['status:total'] !== '0') {
    error_rate = Math.round(current['status:5xx'] / current['status:total'] * 100);
  }

  switch (true) {
      case (error_rate >= DOWN_THRESHOLD):
        status = 'down';
        break;
      case (current['time:p95'] >= SLOW_RESPONSE):
        status = 'slow';
        break;
      default:
        status = "good"
    }

    glyph = "glyphicon-" + ({
      "good" : "ok-sign",
      "slow" : "warning-sign",
      "down" : "minus-sign"
    }[status] || "question-sign");



%>


<!DOCTYPE html>
<html>
<head>
  <title>FamilySearch Status</title>
  <link rel="stylesheet" href="../vendor/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="../vendor/bootstrap/css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="../css/dashboard.css">
  <meta name="viewport" content="width=device-width">
  <meta http-equiv="refresh" content="60">
</head>


<!--
  TODO:
  1) Make the Uptime history as part of the header part...


 -->

<body class="detail <%- page_type %>_type">

  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><a href="../">Home</a></li>
          <li><a href="../change">Change</a></li>
          <li><a class="refresh" href="#"><span class="glyphicon glyphicon-refresh"></span> Last updated at <span id="updatedTimestamp" ><%- last_updated %></span></a></li>
        </ul>
      </div><!--/.navbar-collapse -->
    </div>
  </nav>

  <div class="container">
    <div class="mast_head section">
      <h1 class="page_title"><%- app_id %> Status</h1>
      <div id="status_current_cont" class="curr_status <%- STATUS_TO_DISPLAY[status] %>">
        <span class="glyphicon <%- glyph %>" style="top: 4px;"></span>
        <span style="text-transform: capitalize;" id="stats_uptime"><%- status %></span>
      </div>
    </div>



    <div class="health section cf">
      <h2 class="section_heading">Health @ <span id="stats_last_updated"><%- last_updated %></span> (<span id="stats_time_elapsed"><%- last_updated_raw.fromNow() %></span>)</h2>

      <div class="item throughput">
        <span class="title">req / 5 min</span>
        <span class="metric"><span id="stats_req"><%- current['status:total'] %></span><span class="suffix">req</span></span>
      </div>

      <div class="item resp_time">
        <span class="title">p95 response time</span>
        <% if (parseInt(current['time:p95']) === 0) { %>
        <span id="stats_p95" class="metric">n/a</span>
        <% } else { %>
        <span class="metric"><span id="stats_p95"><%- current['time:p95'] %></span><span class="suffix">ms</span>
        <% } %>
        </span>
      </div>

      <div class="item memory hide-api">
        <span class="title">Memory (AVG &amp; MAX)</span>
        <span class="metric">
          <span id="stats_mem_avg"><%- Math.round(current['mem:avg']) %></span><span class="suffix">MB</span>
        </span>
        <span class="metric">
          <span id="stats_mem_max"><%- Math.round(current['mem:avg']) %></span><span class="suffix">MB</span>
        </span>
      </div>


      <div class="item error_rate">
        <span class="title">Error rate (5xx / total)</span>
        <span class="metric"><span id="stats_error_rate"><%- error_rate %></span><span class="suffix">%</span></span>

      </div>

      <div class="item status_count">
        <span class="title">Status codes</span>
        <div class="totals">
          <span class="item">2xx: <span id="stats_2xx"><%- current['status:2xx'] %></span></span>
          <span class="item">3xx: <span id="stats_3xx"><%- current['status:3xx'] %></span></span>
          <span class="item">4xx: <span id="stats_4xx"><%- current['status:4xx'] %></span></span>
          <span class="item">5xx: <span id="stats_5xx"><%- current['status:5xx'] %></span></span>
        </div>

      </div>

      <div class="item status_count hide-api">
        <span class="title">Heroku codes</span>
        <div class="totals">

        <% if (typeof heroku_errors == "undefined") heroku_errors = []; %>
        <% for(var k=0; k < heroku_errors.length; k++ ) { %>
          <span title="<%- heroku_errors[k]['code'] %>: <%- heroku_errors[k]['desc'] %>"><%- heroku_errors[k]['code'] %>: <%- heroku_errors[k]['count'] %>  </span>

        <% } %>
        </div>

      </div>

    </div><!-- /.health-->

    <div class="history section">
      <h2 class="section_heading">Uptime History</h2>
      <!-- FIXME: Generate this from markup, not in JS. Just use the title tag... -->
      <div class="history_timeline cf">
        <% for (var i=0; i < status_history.length; i++) { %>
        <%
          var history_time = moment.unix(app_history[i].stats.timestamp).tz("America/Denver");
          var history_time_formatted = history_time.format('h:mm a');
          var time_elapsed = history_time.fromNow();
        %>

          <label
            class="label label-<%- STATUS_TO_DISPLAY[status_history[i].status] %>"
            data-status="<%- app_history[i].stats.uptime_status %>"
            data-raw-time="<%- app_history[i].timeBucket %>"
            data-time="<%- history_time_formatted %>"
            data-time-elapsed="<%- time_elapsed %>"
            data-memory-avg="<%- Math.round(app_history[i].stats.memory_avg) %>"
            data-memory-max="<%- Math.round(app_history[i].stats.memory_max) %>"
            data-p95="<%- app_history[i].stats.p95 %>"
            data-status-c2xx="<%- app_history[i].stats.status_2xx %>"
            data-status-c3xx="<%- app_history[i].stats.status_3xx %>"
            data-status-c4xx="<%- app_history[i].stats.status_4xx %>"
            data-status-c5xx="<%- app_history[i].stats.status_5xx %>"
            data-status-total="<%- app_history[i].stats.status_total %>"
            data-error-rate="<%- app_history[i].stats.error_rate %>"
            data-heroku-errors="<%- status_history[i].heroku_errors %>"
            title="Status: <%- status_history[i].status %> @ <%- status_history[i].time.pretty %> | "> </label>
        <% } %>
      </div><!-- /.history_timeline -->
    </div><!-- /.history -->

  <!--   <div class="memory section">
      <h2 class="section_heading">Memory History</h2>
      <div class="graph" data-memory-status='<%- JSON.stringify(status_history) %>'></div>
    </div> -->


    <div class="other_apis section hide-api">
      <div class="status-table">
        <h3 class="section_heading">Dependent APIs</h3>
      <%
        if(typeof api_data != "undefined") {

          var dependent_apis = api_data;

          for(var j=0; j < dependent_apis.length; j++) {

            var api_error_rate = dependent_apis["5xx"] / dependent_apis.total;
            api_error_rate = Math.round(api_error_rate * 100);


            switch (true) {
              case (api_error_rate >= API_DOWN_THRESHOLD):
                api_status = 'down';
                break;
              case (dependent_apis.p95 >= API_SLOW_RESPONSE):
                api_status = 'slow';
                break;
              default:
                api_status = "good"
                break
            }

            api_glyph = "glyphicon-" + ({
              "good" : "ok-sign",
              "slow" : "warning-sign",
              "down" : "minus-sign"
            }[api_status] || "question-sign")

      %>
        <a class="app_link btn btn-<%- STATUS_TO_DISPLAY[api_status] %>" href="../api_detail/<%- dependent_apis[j].api %>"><span class="glyphicon <%- api_glyph %>" style="top: 2px;"></span> <%- dependent_apis[j].api %></a>
      <%
        }
      }
      %>
    </div>
  </div>
  <script src="http://code.jquery.com/jquery-2.0.0.min.js"></script>
  <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>
  <script src="../js/utils.js"></script>
  <!-- <script src="http://mbostock.github.com/d3/d3.v2.js"></script> -->
</body>
</html>
