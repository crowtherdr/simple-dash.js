<div class="mast_head section row">
  <div class="col-md-6 col-xs-12">
    <h1 class="page_title">FamilySearch Status (Alpha) </h1>
  </div>
  <div class="col-md-6 col-xs-12">
    <div class="legend">
      <button class="app_link btn btn-success" title="Error rate < 50% AND Response time < thresholds"><span class="glyphicon glyphicon-ok-sign" style="top: 2px;"></span> Good</button>
      <button class="app_link btn btn-warning" title="Response time > 5s (1s for APIs)"><span class="glyphicon glyphicon-warning-sign" style="top: 2px;"></span> Slow</button>
      <button class="app_link btn btn-danger" title="5xx errors > 50% of total req"><span class="glyphicon glyphicon-minus-sign" style="top: 2px;"></span> Down</button>
      <button class="app_link btn"><span class="glyphicon glyphicon-question-sign" style="top: 2px;"></span> Unknown</button>
    </div>
  </div>
</div>

<h2>Upstream</h2>
<div class="section statuses" data-ng-class="{ loading: loading.upstream }">
  <a class="app_link btn" data-ng-repeat="upstream in upstreamList" data-ng-class="btnClass(upstream.stats.status)" href="#/upstream/{{ clean(upstream.name) }}">
    <span class="glyphicon" data-ng-class="getGlyph(upstream.stats.status)" style="top: 2px;"></span>
    <span data-ng-bind="upstream.name"></span>
  </a>
  <div class="progress progress-striped active">
    <div class="progress-bar progress-bar-success" role="progressbar"></div>
  </div>
</div>

<h2>Frontier</h2>
<div class="section statuses" data-ng-class="{ loading: loading.app }">
  <a class="app_link btn" data-ng-repeat="app in appList" data-ng-class="btnClass(app.stats.uptime_status)" href="#/app/{{ clean(app.appName) }}">
    <span class="glyphicon" data-ng-class="getGlyph(app.stats.uptime_status)" style="top: 2px;"></span>
    <span data-ng-bind="app.appName"></span>
  </a>
  <div class="progress progress-striped active">
    <div class="progress-bar progress-bar-success" role="progressbar"></div>
  </div>
</div>

<h2>APIs</h2>
<div class="section statuses" data-ng-class="{ loading: loading.api }">
  <a class="app_link btn" data-ng-repeat="api in apiList" data-ng-class="btnClass(api.stats.uptime_status)" href="#/api/{{ clean(api.api) }}">
    <span class="glyphicon" data-ng-class="getGlyph(api.stats.uptime_status)" style="top: 2px;"></span>
    <span data-ng-bind="api.api"></span>
  </a>
  <div class="progress progress-striped active">
    <div class="progress-bar progress-bar-success" role="progressbar"></div>
  </div>
</div>
