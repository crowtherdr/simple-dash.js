body
  color: #3d3d3d;
  padding: 0;

h1
  margin-top: 0;

body.api_type .hide-api { display: none; }

.page_title
  font-weight: normal;

.app_link, .legend .item
  border-radius: 0;

.history_timeline
  label
    border-right: 1px solid #38963F;
    border-radius: 0
    float: left;
    font-size: 0;
    height: 12px;
    margin-bottom: 2px;
    width: 12px;

    &.active
      opacity: .5
      outline: 2px solid red;
    &:hover
      border: 1px solid white;

.home
  .legend
    text-align: right;
  .status-table
    margin-bottom: 20px;
    td
      padding: 4px 1px;
      width: 210px;

.section
  margin-bottom: 20px;
  &.memory
    .aGraph
       width:300px
       height:60px
    path
      stroke: steelblue
      stroke-width: 1
      fill: none
  .section_heading
    font-weight: normal;

.detail
  .curr_status
    font-size: 40px;
    &.success
      color: #5CB85C;
    &.warning
      color: #F0AD4E;
    &.danger
      color: #D9534F;
  .health
    .item
      float: left;
      width: 300px;
      .metric
        display: block;
        font-size: 45px;
        margin-top: -13px;
        .suffix
          opacity: 0.6;
    .title
      display: block;
      font-size: 12px;
      text-transform: uppercase;
      opacity: 0.9;
    .error_rate
      width: 200px;
    .status_count
      width: 100px;
    .status_count
      .totals
        .item
          display: inline-block;

    .memory
      width: 250px
      .metric
        font-size: 32px
        margin-top: -9px
      .suffix
        font-size: 24px;




/* TODO: Separate the changelog out into a separate file... */
.change_log
  background-color: #666

  .page_title
    color: #eee

  .change_item_container

    .item
      background-color: #FAFAFA
      margin-bottom: 20px
      padding: 15px
      .icon
        background: url("../img/github_icon.png") top left no-repeat
        // border: 1px solid #666
        float: left
        margin-right: 15px
        // padding: 15px
        text-indent: -500px
        height: 55px
        width: 53px
      .icon
        &.immune
          background: url("../img/immune_icon.png") top left no-repeat
        &.jenkins
          background: url("../img/jenkins_icon.png") 0px -2px no-repeat

      .repo_name
        background-color: #54B7DD
        border-radius: 4px
        color: white
        font-size: 11px
        font-weight: normal
        float: left
        text-transform: capitalize
        margin-right: 10px
        padding: 2px 6px

      .change_meta
        font-size: 11px
        margin-top: 11px

      .commit_link
        color: #3D3D3D
        // text-decoration: underline




/**
 * For modern browsers
 * 1. The space content is one way to avoid an Opera bug when the
 *    contenteditable attribute is included anywhere else in the document.
 *    Otherwise it causes space to appear at the top and bottom of elements
 *    that are clearfixed.
 * 2. The use of `table` rather than `block` is only necessary if using
 *    `:before` to contain the top-margins of child elements.
 */
.cf:before,
.cf:after {
  content: " ";
/* 1 */
  display: table;
/* 2 */
}
.cf:after {
  clear: both;
}
/**
 * For IE 6/7 only
 * Include this rule to trigger hasLayout and contain floats.
 */
.cf {
  *zoom: 1;
}
