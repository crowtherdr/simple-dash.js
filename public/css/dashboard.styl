body
  color: #3d3d3d;
  padding: 0;

h1
  margin-top: 0;

body.api_type .hide-api { display: none; }

.page_title
  font-weight: normal;

.app_link, .legend .item
  border-radius: 0;

.history_timeline
  label
    border-right: 1px solid #666;
    display: block;
    float: left;
    height: 10px;
    margin-bottom: 5px;
    width: 10px;

.home
  .legend
    text-align: right;
  .status-table
    margin-bottom: 20px;
    td
      padding: 4px 1px;
      width: 210px;

.section
  margin-bottom: 20px;
  &.memory
    .aGraph
       width:300px
       height:60px
    path
      stroke: steelblue
      stroke-width: 1
      fill: none
  .section_heading
    font-weight: normal;

.detail
  .curr_status
    font-size: 40px;
    &.success
      color: #5CB85C;
    &.warning
      color: #F0AD4E;
    &.danger
      color: #D9534F;
  .health
    .item
      float: left;
      width: 300px;
      .metric
        display: block;
        font-size: 45px;
        margin-top: -13px;
        .suffix
          opacity: 0.6;
    .title
      display: block;
      font-size: 12px;
      text-transform: uppercase;
      opacity: 0.9;
    .error_rate
      width: 200px;
    .status_count
      width: 100px;
    .status_count
      .totals
        span
          display: block;

/**
 * For modern browsers
 * 1. The space content is one way to avoid an Opera bug when the
 *    contenteditable attribute is included anywhere else in the document.
 *    Otherwise it causes space to appear at the top and bottom of elements
 *    that are clearfixed.
 * 2. The use of `table` rather than `block` is only necessary if using
 *    `:before` to contain the top-margins of child elements.
 */
.cf:before,
.cf:after {
  content: " ";
/* 1 */
  display: table;
/* 2 */
}
.cf:after {
  clear: both;
}
/**
 * For IE 6/7 only
 * Include this rule to trigger hasLayout and contain floats.
 */
.cf {
  *zoom: 1;
}
